#!/usr/bin/env ruby

require_relative '../config/environment'



def greeting 
    puts "Welcome to Tic Tac Toe!"
    puts "Please choose game type:
    0 - computer vs. computer 
    1 - 1 player game 
    2 - 2 player game" 
end 

def player? 
    puts "Player 1 ready? [y/n] "
end 

def new_game 
        greeting 
        game_type = gets.strip 
        player? 
        player_1 = gets.strip.downcase  
        if player_1 == "y" 
            case game_type 
            when "0" 
                Game.new(Players::Computer.new("X"), Players::Computer.new("O"), Board.new).play 
            when "1" 
                Game.new(Players::Human.new("X"), Players::Human.new("O"), Board.new).play
            when "2" 
                Game.new(Players::Human.new("X"), Players::Human.new("O"), Board.new).play 
            end 
        elsif player_1 == "n"
            puts "See you next time!"
            exit 
        else
            puts "Invalid input:"
            player?
        end
end 

new_game 






    
